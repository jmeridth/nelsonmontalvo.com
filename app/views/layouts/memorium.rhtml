<html>
<head>
    <title>Nelson Montalvo Memorial Website</title>
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
    <meta name="description" content="Nelson Montalvo Memorium">
    <meta name="keywords" content="Nelson Montalvo, Funeral, San Antonio, Memorium">
    <%= stylesheet_link_tag "nelsonmontalvo", :media => "all" %>
</head>

<body>
<div align="center">
    <div id="main">
        <% if flash[:notice] -%>
            <div id="notice"><%= flash[:notice] %></div>
        <% end -%>
        <%= yield :layout%>
		<div class="links">
			<ul>
				<li><%= link_to 'Home', '/home' %></li>
				<li><%= link_to 'Donate to Humane Society, SPCA of Bexar County', 'https://www.givedirect.org/give/givefrm.asp?CID=1013', :target => "_blank" %></li>
				<li><%= link_to 'Last Picture', '/last_picture' %></li>
				<li><%= link_to 'Memorial Blog Entry', '/blog' %></li>
				<li><%= link_to 'Obituary', '/obituary'  %></li>
				<li><%= link_to 'Viewing & Funeral Information', '/funeral' %></li>
			</ul>		
		</div>
    </div>
</div>
</body>
</html>